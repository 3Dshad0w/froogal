<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="298dp" >

        <ImageView
            android:id="@+id/header_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_small"
            android:src="@drawable/gradient"
            />

        <co.froogal.froogal.font.RobotoTextView
            android:id="@+id/header_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="Restaurant Name"
            android:padding="5dp"
            android:textColor="@color/cpb_white"
            app:typeface="robotoRegular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:orientation="horizontal"
            android:id="@+id/helpers"
            android:layout_gravity="bottom"
            android:layout_marginBottom="48dip"
            android:paddingTop="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="25dp"
                android:text="call"
                android:textSize="8sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:drawable/ic_menu_call" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="1.5 KM"
                android:textSize="8sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:drawable/ic_menu_directions" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="50dp"
                android:text="FAV"
                android:textSize="8sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:drawable/btn_star_big_on" />
        </LinearLayout>
        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_gravity="bottom"
            android:textColor="#ffffff"
            app:pstsIndicatorColor="#ffffff"
            app:pstsDividerColor="@android:color/transparent"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <co.froogal.froogal.font.RobotoTextView
                android:id="@+id/icon"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                />
            <co.froogal.froogal.font.RobotoTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentTop="true"
                app:typeface="robotoBold"
                android:textSize="15sp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</FrameLayout>

