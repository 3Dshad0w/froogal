<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_height="32dp"
    android:layout_width="match_parent"
    android:id="@+id/expiryLayout"
    android:background="@drawable/loyalty_card_round_border"
    android:layout_margin="8dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This loyalty card will expire on : "
        android:id="@+id/loyaltyInfo"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/main_color_500"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" YYYY/MM/DD"
        android:id="@+id/expiryDate"
        android:textColor="@color/main_color_500"
        android:textSize="13dp"
        android:layout_toRightOf="@+id/loyaltyInfo"
        android:gravity="center_vertical"
        android:layout_centerVertical="true" />


</RelativeLayout>

    </LinearLayout>