<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="2dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="145dp"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/material_light_yellow_300"
        android:id="@+id/topbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="R"
            android:id="@+id/marker"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="@drawable/offer_card_round_border_rewards"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/OfferTextView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#ff000000"
            android:layout_toRightOf="@+id/marker"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires on : 5555/11/06"
            android:id="@+id/expiry"
            android:layout_below="@+id/OfferTextView"
            android:layout_alignLeft="@+id/OfferTextView"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
    </android.support.v7.widget.CardView>
