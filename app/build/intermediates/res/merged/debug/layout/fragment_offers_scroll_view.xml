<co.circe.respos.library.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="co.circe.respos.fragment.AboutScrollViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:divider="@drawable/horizontal_divider"
        android:showDividers="middle">

        <include layout="@layout/header_placeholder"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/descriptionLayout">



                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/RewardsCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rewardsCardLayout">

                        <TextView
                            android:id="@+id/tagTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="REWARD:"
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textColor="@android:color/black"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"
                            android:id="@+id/divider1"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"/>

                        <TextView
                            android:id="@+id/TagsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:text="Get 10% of your total bill as reward points"
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical|center_horizontal" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/LoyaltyCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/addressCardLayout"
                        android:background="@color/cpb_red_dark">


                        <TextView
                            android:id="@+id/AddressTextView"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:text="LOYALTY CARD"
                            android:padding="8dp"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:gravity="center_vertical|center_horizontal" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/offerCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/offerCardLayout">


                        <TextView
                            android:id="@+id/contactTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OFFER:"
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"
                            android:id="@+id/divider3"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"/>

                        <TextView
                            android:id="@+id/ContactTextView"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:text="Buy 1 biryani and get 2 cokes Free!"
                            android:textSize="20sp"
                            android:padding="8dp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical|center_horizontal" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
    </LinearLayout>


</co.circe.respos.library.NotifyingScrollView>
