<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screen">
<!--
    <co.froogal.froogal.view.kbv.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
-->
    <!-- We use dps for font size: we don't want our logo
    to become larger if user has set larger text in global
    settings. -->


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/froogal_splash"
        android:alpha="0.0"
        android:padding="10dp"
        android:layout_margin="40dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">
            <co.froogal.froogal.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:rippleColor="@color/main_color_grey_400"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_horizontal">

                <co.froogal.froogal.font.RobotoTextView
                    android:id="@+id/LoginButton"
                    style="@style/ButtonStyle.RaisedEmpty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@color/cpb_white"
                    android:alpha="0.0"
                    android:text="@string/login"
                    android:textColor="@color/main_color_500" />
            </co.froogal.froogal.view.MaterialRippleLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">
            <co.froogal.froogal.view.MaterialRippleLayout
                style="@style/RippleStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:rippleColor="@color/main_color_grey_400"
                android:layout_marginRight="3dp"
                android:layout_gravity="center_horizontal">

                <co.froogal.froogal.font.RobotoTextView
                    android:id="@+id/RegisterButton"
                    style="@style/ButtonStyle.RaisedEmpty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:alpha="0.0"
                    android:background="@color/cpb_white"
                    android:text="REGISTER"
                    android:textColor="@color/main_color_500"/>
            </co.froogal.froogal.view.MaterialRippleLayout>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>