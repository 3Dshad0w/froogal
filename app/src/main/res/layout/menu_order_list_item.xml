<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_notification_overlay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/itemImage">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Name Here"
                    android:id="@+id/itemName"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS:200"
                    android:id="@+id/costTextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:paddingRight="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="2dp">




                <RatingBar
                    android:id="@+id/ratingIndicator"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:layout_alignParentLeft="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ratingIndicator"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="size: Normal"
                        android:id="@+id/sizeTextView"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Veg"
                        android:id="@+id/typeTextView"
                        android:layout_toRightOf="@+id/sizeTextView"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/minusImageView"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:src="@android:drawable/btn_minus"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/countTextView"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/plusImageView"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:src="@android:drawable/btn_plus"
                        android:scaleType="centerCrop"
                        android:paddingLeft="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:text="Description Here. Restaurant is so bad, but i dont know about it. you have to check that for yourself"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:layout_below="@+id/itemImage"
            android:layout_toRightOf="@+id/itemImage" />


    </RelativeLayout>
</LinearLayout>
