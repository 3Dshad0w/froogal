<co.froogal.froogal.library.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="co.froogal.froogal.fragment.AboutScrollViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:divider="@drawable/horizontal_divider"
        android:showDividers="middle">

        <include layout="@layout/header_placeholder"/>

        <co.froogal.froogal.adapter.ExpandableHeightGridView
            android:id="@+id/myId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />

        </LinearLayout>


</co.froogal.froogal.library.NotifyingScrollView>
