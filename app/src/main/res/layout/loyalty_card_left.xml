<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:minHeight="64dp"
        android:id="@+id/visitLayout"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:background="@drawable/loyalty_card_circle_visit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISIT"
            android:id="@+id/textView6"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_color_500"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:id="@+id/visitCount"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:textIsSelectable="false"
            android:textColor="@color/main_color_500" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:minHeight="64dp"
        android:background="@drawable/loyalty_card_round_border"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/dummyCircle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Buy One Pizza and Get another Free!!"
            android:id="@+id/loyaltyInfo"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="@color/main_color_500"
            android:layout_marginLeft="12dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="32dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:background="@drawable/loyalty_card_circle"
        android:id="@+id/dummyCircle"
        android:layout_toRightOf="@+id/visitLayout"></LinearLayout>

</RelativeLayout>
